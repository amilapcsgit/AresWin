<Window x:Class="AresWin.ThemedMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ARES System Message"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        ShowInTaskbar="False">

	<Window.Resources>
		<SolidColorBrush x:Key="PanelBackgroundBrush" Color="#050B1A"/>
		<SolidColorBrush x:Key="PanelBorderBrush" Color="#004488"/>
		<SolidColorBrush x:Key="TronCyan" Color="#00EAFF"/>
		<SolidColorBrush x:Key="TextPrimaryBrush" Color="#FFFFFF"/>
		<SolidColorBrush x:Key="TextSecondaryBrush" Color="#8899AA"/>

		<Style x:Key="Style_Btn_Cyan" TargetType="Button">
			<Setter Property="Background" Value="#102040"/>
			<Setter Property="Foreground" Value="{StaticResource TronCyan}"/>
			<Setter Property="BorderBrush" Value="{StaticResource TronCyan}"/>
			<Setter Property="BorderThickness" Value="1"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="Button">
						<Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
							<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
						</Border>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>

		<Style x:Key="Style_Btn_Red" TargetType="Button">
			<Setter Property="Background" Value="Transparent"/>
			<Setter Property="BorderThickness" Value="0"/>
			<Style.Triggers>
				<Trigger Property="IsMouseOver" Value="True">
					<Setter Property="Background" Value="#44FF0000"/>
				</Trigger>
			</Style.Triggers>
		</Style>
	</Window.Resources>

	<Border BorderBrush="{StaticResource PanelBorderBrush}"
            BorderThickness="2"
            Background="{StaticResource PanelBackgroundBrush}"
            Margin="10">
		<Border.Effect>
			<DropShadowEffect Color="#00EAFF" BlurRadius="15" ShadowDepth="0" Opacity="0.3"/>
		</Border.Effect>

		<Grid MinWidth="350" MaxWidth="500">
			<Grid.RowDefinitions>
				<RowDefinition Height="35"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
			</Grid.RowDefinitions>

			<Border Grid.Row="0" Background="#0A152A" MouseLeftButtonDown="Header_MouseDown">
				<Grid>
					<StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="12,0">
						<Path Data="M12,2L4.5,20.29L5.21,21L12,18L18.79,21L19.5,20.29L12,2Z"
                              Fill="{StaticResource TronCyan}" Height="14" Width="14" Stretch="Uniform" Margin="0,0,8,0"/>
						<TextBlock x:Name="HeaderText"
                                   Text="SYSTEM MESSAGE"
                                   Foreground="{StaticResource TronCyan}"
                                   FontSize="12" FontWeight="Bold"
                                   VerticalAlignment="Center"
                                   FontFamily="Consolas"/>
					</StackPanel>

					<Button HorizontalAlignment="Right" Width="35" Height="35"
                            Style="{StaticResource Style_Btn_Red}" Click="BtnClose_Click">
						<Path Data="M 0,0 L 10,10 M 10,0 L 0,10"
                              Stroke="{StaticResource TextPrimaryBrush}"
                              StrokeThickness="1.5" Width="10" Height="10" Stretch="Uniform"/>
					</Button>
				</Grid>
			</Border>

			<StackPanel Grid.Row="1" Margin="25,20,25,15">
				<TextBlock x:Name="MessageText"
                           Text="Message content goes here..."
                           TextWrapping="Wrap"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           FontSize="13"
                           FontFamily="Segoe UI"
                           LineHeight="20"/>
			</StackPanel>

			<Border Grid.Row="2" Background="#081225" Padding="15,10">
				<StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
					<Button x:Name="OkButton"
                            Content="CONFIRM"
                            Width="100" Height="30"
                            Style="{StaticResource Style_Btn_Cyan}"
                            Click="OkButton_Click"
                            Cursor="Hand"/>
				</StackPanel>
			</Border>
		</Grid>
	</Border>
</Window>